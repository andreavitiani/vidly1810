extends layout

block content 
    
    .container
        form(action="/api/genres/deletebyname", method="post")
            h1.text-center #{title}
            h2= title
            p Check the genres list page for the exact name
            label(for="name") NAME:__
            input#exampleInput(type="text", name="name", placeholder="genre to delete")
            br
            button.btn.btn-primary(type="submit" data-toggle="modal" data-target="#exampleModal") SUBMIT
    #exampleModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalLabel', aria-hidden='true')
        .modal-dialog(role='document')
            .modal-content
                .modal-header
                    h5#exampleModalLabel.modal-title Modal title
                    button.close(type='button', data-dismiss='modal', aria-label='Close')
                    span(aria-hidden='true') Ã—
                .modal-body
                    | ...
                .modal-footer
                    button.btn.btn-secondary(type='button', data-dismiss='modal') Close