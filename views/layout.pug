        link(rel="stylesheet" href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.6.3/css/font-awesome.min.css")
        link(rel="stylesheet" href="public/assets/css/Footer-white.css")
        link(href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css", rel="stylesheet")
        script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js")
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js")
        style(type="text/css").
            .spacer {
                height: 50px
            }
    body.d-flex.flex-column.h-100
        // Begin page content
        main.flex-shrink-0(role='main')
            if loggedIn
                nav.navbar.navbar-expand-lg.navbar-light.bg-light
                    a.navbar-brand(href='/')
                        img.d-inline-block.align-top(src="public/assets/images/logo-vidly.png", width='30', height='30', alt='')
                        |Vidly
                    button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
                        span.navbar-toggler-icon
                    #navbarSupportedContent.collapse.navbar-collapse
                        ul.navbar-nav.mr-auto
                            li.nav-item.active
                                a.nav-link(href='/dashboard')
                                    | Home 
                                span.sr-only (current)
                            li.nav-item.dropdown
                                a#navbarDropdown.nav-link.dropdown-toggle(href='#', role='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
                                    | Genres
                                .dropdown-menu(aria-labelledby='navbarDropdown')
                                    a.dropdown-item(href='/add-new-genre') Add new
                                    a.dropdown-item(href='/delete-genre') Delete
                                    a.dropdown-item(href='/list-genres') List all
                            li.nav-item.active.mr-3
                                a.nav-link(href='/profile')
                                    | Profile 
                        form(action="/api/auth/logout", method="get")
                            button.my-2.my-lg-0.nav-link(type='submit') Logout
    block content
    br
    hr
    footer.footer.mt-auto.py-3.font-small.bg-dark.text-white
        .footer-copyright.text-center.mb-3
